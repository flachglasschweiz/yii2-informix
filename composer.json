{
    "name": "edgardmessias/yii2-informix",
    "description": "Informix Driver for Yii2 Framework.",
    "type": "yii2-extension",
    "keywords": ["yii2", "extension", "informix", "activerecord"],
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Edgard Messias",
            "email": "edgardmessias@gmail.com"
        }
    ],
    "require": {
        "ext-pdo": "*"
    },
    "require-dev": {
        "yiisoft/yii2-dev": "2.0.14",
        "phpunit/phpunit": "4.8.34",
        "cweagans/composer-patches": "^1.6"
    },
    "autoload": {
        "psr-4": {
            "edgardmessias\\db\\informix\\": "src"
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ],
    "extra": {
        "composer-exit-on-patch-failure": true,
        "patches": {
            "phpunit/phpunit-mock-objects": {
                "Fix PHP 7 compatibility": "./tests/phpunit_mock_objects.patch"
            },
            "phpunit/phpunit": {
                "Fix PHP 7.2 compatibility": "./tests/phpunit_getopt.patch"
            }
        }
    }
}
